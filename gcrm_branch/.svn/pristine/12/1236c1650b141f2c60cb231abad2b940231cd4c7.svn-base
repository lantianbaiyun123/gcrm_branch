/*materialList*/
@media (min-width: 992px) {
.material-list .main-row .col-md-4 { width: 34.33333333333333%; }
.material-list .main-row .col-md-2 { width: 15.666666666666664%; }
}
.material-list .row .ml-1 { margin-left: -1px; }
.material-list .select-code-type { border-top-right-radius: 0; border-bottom-right-radius: 0;}
.material-list .input-code-type { border-top-left-radius: 0; border-bottom-left-radius: 0;}
.material-list .input-select2-suggest { width: 79px; height: 30px; }
.material-list .input-select2-suggest .select2-choice { height: 30px; font-size: 12px }
.material-list .btn-full-width { width: 100%; padding-left: 6px; padding-right: 6px; }
.material-list .btn-text { text-align: left; text-overflow: ellipsis; overflow: hidden; }
.material-list .panel-query .main-row { padding-top: 7px; padding-bottom: 5px; }
.material-list .panel-query .time-dash { width: 6%; text-align: center; line-height: 33px; }
.material-list .panel-query .span-datepicker { width: 46%; margin-left: 1px}
.material-list .panel-query .min-w165 { min-width: 165px; }
.material-list .panel-query .label-customer { width: 70px }
.material-list .panel-query .label-position { width: 75px; padding-right: 6px; text-align: right; }
.material-list .panel-query .col-position { width: 685px; margin-bottom: 5px; margin-top: 5px; }
.material-list .panel-query .col-customer { margin-top: 5px; }
.material-list .panel-query .select2-container .select2-choice {
    background: #fff;
    filter: none;
    height: 30px;
    padding-top: 2px;
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    border-color: #ccc;
}
/*materialList END*/

/*materialDetail*/
@media (min-width: 768px){
.dl-horizontal dt { width: 210px; }
.dl-horizontal dd { margin-left: 220px; }
}
.material-detail .dl { margin-bottom: 25px; }
.material-detail .table-wrap { padding-left: 20px; }
.material-detail .sub-table { margin-top: 10px; width: 80%}
.material-detail .sub-table .active { width: 100px; text-align: right;}
.material-detail .table-material-list { border-top: 1px solid #dddddd; }
.material-detail .current-materials { line-height: 2;}
.material-detail .tr-vertical-middle td { vertical-align: middle; }
.material-detail .th-btn { width: 60px; }
.material-detail .tr-material-detail td { border-top: 1px dashed #ddd; }
.material-detail .tr-material-detail dl { margin-bottom: 10px; }
.material-detail .tr-material-detail dt { width: 150px; line-height: 25px; }
.material-detail .tr-material-detail dd { margin-left: 160px; line-height: 28px; text-overflow: ellipsis; max-width: 700px; overflow: hidden; }
.material-detail .limit-long-text { width: 464px; display: block; text-overflow: ellipsis; word-break: break-word; overflow: hidden; }
.material-detail .menu-material h6 { padding-top: 10px; padding-left: 10px; margin: 20px 10px 10px 30px; border-top: 1px solid #ddd; font-family: 'Microsoft YaHei';}
.material-detail .sub-table > tbody + tbody { border-top: 1px solid #dddddd; }

.material-edit-modal .modal-dialog { width: 960px; }
.material-edit-modal .modal-footer { margin-top: 0; }
.material-edit-modal dl { margin-bottom: 0; }
.material-edit-modal dt { width: 120px; }
.material-edit-modal dd { margin-left: 140px; }
.material-edit-modal .dd-code { margin-bottom: 10px; }
.material-edit-modal .dd-title { margin-bottom: 15px; }
.material-edit-modal .dd-url { margin-bottom: 10px; }
.material-edit-modal .dd-title input,
.material-edit-modal .dd-url input { margin-top: 3px }
.material-edit-modal .material-info { padding: 3px 10px; margin-bottom: 10px; font-size: 12px;}
.material-edit-modal .material-hint { font-size: 12px; }
.material-edit-modal .btn-remove { color: #ccc; padding-left: 0; padding-right: 5px; line-height: 1; width: auto;}
.material-edit-modal .btn-remove:hover { color: #d9534f; }
.material-edit-modal .tooltip { z-index: 9999;}
.material-edit-modal .dropdown-material h5 { padding-top: 10px; padding-left: 10px; margin: 30px 10px 20px 80px; border-top: 1px solid #ddd; font-family: 'Microsoft YaHei';}
/*materialDetail END*/
