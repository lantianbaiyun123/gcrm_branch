<div class="modal-header">
    <h4>{{title}}</h4>
</div>
<div class="modal-body">
  <form class="form-horizontal" role="form" name="myForm">
    <!-- <div class="form-group" ng-if="!batchModifyProperty || ( batchModifyProperty && notPropertyYet )"> -->
    <div class="form-group" ng-if="!batchModifyProperty || batchModifyProperty">
      <label class="col-md-2 control-label">{{'ROTATION_TYPE' | translate}}：</label>
      <div class="col-md-4">
        <label class="radio radio-inline" ng-repeat="item in e.rotationTypes">
          <input type="radio" ng-model="e.rotationType" ng-value="{{item.id}}" ng-disabled="rotationTypeDisable || stateViewing" ng-change="rotationTypeChange()" />
          {{item.name}}
        </label>
      </div>
      <div class="help-block col-md-4" ng-if="myFormValidating && !(e.rotationType || e.rotationType == 0)">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_ROTATION_TYPE_HINT' | translate}}</span>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">{{'MATERIAL_TYPE' | translate}}：</label>
      <div class="col-md-4">
        <label class="radio radio-inline" ng-repeat="item in e.materialTypes">
          <input type="radio" ng-model="e.materialType" ng-value="{{item.id}}" ng-change="materialTypeChange()" ng-disabled="stateViewing"/>
          {{item.name}}
        </label>
      </div>
      <div class="help-block col-md-4" ng-if="myFormValidating && !(e.materialType || e.materialType == 0)">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_MATERIAL_TYPE_HINT' | translate}}</span>
      </div>
    </div>
    <div class="form-group" ng-if="e.materialType == 0 || e.materialType == 2">
      <label for="toTransfer" class="col-md-2 control-label">{{'IMAGE_AREA_REQUIRED' | translate}}：</label>
      <div class="col-md-4">
        <input type="text" class="form-control" ng-model="e.areaRequired" yt-placeholder="{{'RESOURCE_POSITION_EG_AREA_REQUIRED' | translate}}" ng-disabled="stateViewing">
      </div>
    </div>
    <div class="form-group" ng-if="e.materialType == 0 || e.materialType == 2">
      <label for="toTransfer" class="col-md-2 control-label">{{'IMAGE_SIZE' | translate}}：</label>
      <div class="col-md-4">
        <input type="text" class="form-control" ng-model="e.size" yt-placeholder="{{'RESOURCE_POSITION_EG_SIZE' | translate}}" ng-disabled="stateViewing">
      </div>
    </div>
    <div class="form-group" ng-if="e.materialType">
      <label for="toTransfer" class="col-md-2 control-label">{{'TEXT_LINK_LENGTH' | translate}}：</label>
      <div class="col-md-4">
        <input type="text" class="form-control" ng-model="e.textlinkLength" yt-placeholder="{{'RESOURCE_POSITION_EG_TEXTLINK_LENGTH' | translate}}" ng-pattern="/^[0-9]*[1-9][0-9]*$/" name="textlinkLength" ng-disabled="stateViewing">
      </div>
      <div class="help-block col-md-5">
        <span class="text-danger" ng-if="myForm.textlinkLength.$error.pattern">{{'RESOURCE_POSITION_MODAL_TEXT_LINK_HINT' | translate}}</span>
        <span>{{'RESOURCE_POSITION_MODAL_TEXT_LINK_HELP' | translate}}</span>
      </div>
      <!-- <div class="help-block col-md-4" ng-if="myForm.textlinkLength.$error.pattern">
      </div> -->
    </div>
    <!-- <div class="form-group" ng-if="!batchModifyProperty || ( batchModifyProperty && notPropertyYet )"> -->
    <div class="form-group" ng-if="!batchModifyProperty || batchModifyProperty">
      <label for="toTransfer" class="col-md-2 control-label">{{'SALES_AMOUNT' | translate}}：</label>
      <div class="col-md-4">
        <input type="text" class="form-control" ng-model="e.salesAmount" ng-pattern="/^[0-9]*[1-9][0-9]*$/" name="salesAmount" ng-disabled="e.rotationType == 0 || stateViewing">
      </div>
      <div class="help-block col-md-4" ng-if="salesAmountDisable">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_SALESAMOUNT_RESERVED_HINT' | translate}}</span>
      </div>
      <div class="help-block col-md-4" ng-if="myForm.salesAmount.$error.pattern">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_SALESAMOUNT_WRONG_HINT' | translate}}</span>
      </div>
      <div class="help-block col-md-4" ng-if="myFormValidating && !e.salesAmount">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_SALESAMOUNT_NO_HINT' | translate}}</span>
      </div>
    </div>
    <div class="form-group">
      <label for="toTransfer" class="col-md-2 control-label">{{'PV' | translate}}：</label>
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-addon">&nbsp;P&nbsp;V&nbsp;</span>
          <input type="text" class="form-control" ng-model="e.pv" ng-pattern="/^\d+$/" name="pv" ng-disabled="stateViewing" />
        </div>
      </div>
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-addon">{{'RESOURCE_POSITION_MODAL_CLICK' | translate}}</span>
          <input type="text" class="form-control" ng-model="e.click" ng-pattern="/^\d+$/" name="inputclick" ng-disabled="stateViewing" />
        </div>
      </div>
      <div class="help-block col-md-2" ng-if="myForm.pv.$error.pattern || myForm.inputclick.$error.pattern">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_PV_HINT' | translate}}</span>
      </div>
    </div>
    <div class="form-group">
      <label for="toTransfer" class="col-md-2 control-label">{{'CPT_BENCHMARK_PRICE' | translate}}：</label>
      <div class="col-md-4">
        <div class="input-group">
          <span class="input-group-addon">USD</span>
          <input type="text" class="form-control" ng-model="e.cptBenchmarkPrice" ng-pattern="/^[0-9]+([.]\d{1,2})?$/" name="cptBenchmarkPrice" ng-disabled="stateViewing" />
        </div>
      </div>
      <div class="help-block col-md-6" ng-if="myForm.cptBenchmarkPrice.$error.pattern">
        <span class="text-danger">{{'RESOURCE_POSITION_MODAL_CPT_HINT' | translate}}</span>
      </div>
    </div>
  </form>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-primary" ng-click="ok()" ng-hide="stateViewing">{{'SAVE' | translate}}</button>
  <button type="button" class="btn btn-default" ng-click="cancel()">{{'CANCEL' | translate}}</button>
</div>
